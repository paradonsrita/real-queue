    <!--_Host.cshtml-->
    <script>
        // สร้าง PDF ด้วย iframe
        window.printPdf = function (pdfData) {
            var iframe = document.createElement("iframe");
            iframe.style.width = "210mm";
            iframe.style.height = "297mm";
            iframe.style.display = "none";
            document.body.appendChild(iframe);

            var doc = iframe.contentWindow.document;
            doc.open();
            // doc.write(pdfData);
            doc.write(pdfData);
            doc.close();
            console.log("HTML written to iframe");

            // ลบองค์ประกอบที่ไม่มีตัวอักษรก่อนพิมพ์
            var elements = doc.body.querySelectorAll("*");
            elements.forEach(function (el) {
                if (el.textContent.trim() === "") {
                    el.style.display = "none";
                }
            });

            setTimeout(function () {
                iframe.contentWindow.focus();
                iframe.contentWindow.print();
                document.body.removeChild(iframe); // ลบ iframe หลังจากพิมพ์
            }, 500);
        };
    </script>



</body>
